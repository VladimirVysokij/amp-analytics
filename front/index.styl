@require 'styl/reset'

.app
  width 100%
  height 100%
  min-height 100vh
  background-color #edf0f3

  &__wrapper
    display flex
    flex-direction column
    width 1024px
    min-height 100vh
    margin 0 auto

  &__sidebar
    width 100px

  &__body
    display flex

  &__main
    width calc(100% - 100px)
    box-sizing border-box
    padding-left 30px
