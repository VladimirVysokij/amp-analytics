.amp
  display flex
  flex-direction column

  &__control
    display flex
    width 100%
    margin-bottom 10px

  &__panel
    &--left
      display flex
      align-items center
      flex-direction column
      justify-content center
      width 220px
      margin-right 30px
      box-shadow 0 1px 0 0 #d7d8db, 0 0 0 1px #e3e4e8
      background-color #ff

    &--right
      width calc(100% - 250px)

  &__uploader
    margin-bottom 20px
