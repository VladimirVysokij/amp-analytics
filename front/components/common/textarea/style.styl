.textarea
  width 100%
  height 100%
  min-width 100px
  min-height 100px
  border 2px solid #315efb
  box-sizing border-box
  border-radius 2px
  resize none
  transition .2s
  background-color #f9fafb

  &:active
  &:focus
    outline none

  &:focus
    border 2px solid #2c54e2
    background-color #fff
